@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <main role="main" class="pb-3">
        <div class="main">
            <p class="sign" align="center">Sign in</p>
            <form action="" method='POST' name="Loginform" class="Login">
                <input class="un" id="Username" name="Username" type="text" align="center" placeholder="Email">
                <input class="pass" id="password" name="password" type="password" align="center" placeholder="Password">
                <button class="submit" align="center">Sign in</button>
                <p class="forgot" align="center"><a href="#" data-toggle="modal" id="openmodel" data-target="#userModel">Sign Up</a></p>


            </form>
        </div>
        <form action="" method='POST' name="UserRegistration" class="Login">
            <div class="modal fade" id="userModel" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Sign Up</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="form-group" style="display:none;" id="labelerrormsg">
                                <label id="errorMessage"></label>
                            </div>
                            <div class="form-group">
                                <label for="Usernamereg">Email</label>
                                <input type="text" class="form-control" placeholder="Email" name="Usernamereg" id="Usernamereg" />
                            </div>
                            @*<div class="form-group">
                                <label for="UserType">UserType</label>
                                <select class="form-control" id="UserType">
                                    <option value="Male">Attendee</option>
                                    <option value="Female">Manager</option>
                                    <option value="Other">Admin</option>
                                </select>
                            </div>*@
                            <div class="form-group">
                                <label for="Passwordreg">Password</label>
                                <input type="password" class="form-control" name="Passwordreg" placeholder="Password" id="Passwordreg" />
                            </div>
                            <div class="form-group">
                                <label for="ConfirmPassword">Confirm Password</label>
                                <input type="password" class="form-control" placeholder="Confirm Password" name="ConfirmPassword" id="ConfirmPassword" />
                            </div>

                        </div>
                        <div class="modal-footer">
                            <button type="submit" id="btnsubmit" class="btn btn-primary">Register</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </main>
</div>


@section Scripts {
    <script src="~/js/Login.js" asp-append-version="true"></script>

}

